---
pagination:
  data: collections.posts
  size: 4
  alias: posts
permalink: articles.html
---
{% extends "base.njk" %}
{% block main %}
<main>
    <h1>Articles</h1>
    {% if posts.length > 0 %}
        {% for post in posts | reverse %}
            {% include "post.njk" %}
        {% endfor %}
    {% else %}
        Coming soon...
    {% endif %}
</main>
{% endblock %}
