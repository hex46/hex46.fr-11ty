<article>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <div class="metadata">
        <span>Créé le {{ post.date | localdate }}</span>
        {% if post.data.modified %}
        - <span>Modifié le {{ post.data.modified | localdate }}</span>
        {% endif %} 
    </div>
    <div class="metadata">
        <span>Tag(s) : </span>
        {% for tag in post.data.tags %}
            <span class="tag">{{ tag }}</span>
        {% endfor %}
    </div>  
    <p>{{ post.data.description }}</p>
</article>